enum Role {
  ADMIN,
  USER
}

type Drop {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  text: String!
  author: User
  location: Location!
  color: String!
}

type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  username: String! @unique
  drops: [Drop!]!
  roles: [Role!]!
}

type Location {
  id: ID! @unique
  latitude: Float!
  longitude: Float!
  altitude: Float!
}

type Like {
  id: ID! @unique
  drop: Drop!
  user: User!
}

type Dislike {
  id: ID! @unique
  drop: Drop!
  user: User!
}